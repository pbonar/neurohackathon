{
  "manifest_version": 3,
  "name": "Touch the Grass",
  "version": "1.0.0",
  "description": "Stay calm and focused: reduce stress while sending messages and emails.",
  "icons": {
    "16": "icons/cow-16.png",
    "48": "icons/cow-48.png",
    "128": "icons/cow-128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://sudoku-api.vercel.app/*",
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/cow-16.png",
      "48": "icons/cow-48.png",
      "128": "icons/cow-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "videos/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com https://youtube.com;"
  }
}